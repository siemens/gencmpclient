ifneq ($(EJBCA_ENABLED),)
test_all: demo_EJBCA
endif
test_all: test_profile test test_Mock tests_LwCmp
ifneq ($(EJBCA_ENABLED),)
test_all: test_Simple
endif
ifneq ($(TEST_INSTA),)
test_all: test_Insta
