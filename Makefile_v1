# doc and zip ##################################################################

doc: doc_this get_submodules
	$(MAKE) -C $(SECUTILS_DIR) -f Makefile_v1 -s doc

doc/$(OUT_DEV_DOC): doc/Generic_CMP_client_API.odt # to be done manually

